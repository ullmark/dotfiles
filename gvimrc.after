if has("gui_macvim")
  set fuoptions=maxvert,maxhorz
  set guifont=Monaco:h16
  set guioptions=aAce
  set columns=179
  set lines=50
  set noballooneval
  set laststatus=2
  let g:mapleader = ","

  " color the separator a bit...
  hi VertSplit                 guibg=#414243 gui=NONE guifg=#414243

  " Disable beeps and flashes
  au GUIEnter * set vb t_vb=

  " Fugitive config settings
  nmap <F2> :Gstatus<CR>
  nmap <F3> :Gdiff<CR>
endif
